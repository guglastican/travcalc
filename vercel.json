{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "sitemap.xml",
      "use": "@vercel/static"
    },
    {
      "src": "robots.txt",
      "use": "@vercel/static"
    },
    {
      "src": "blog/**",
      "use": "@vercel/static"
    },
    {
      "src": "posts/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/calculate-distance",
      "methods": ["POST"],
      "dest": "server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/about",
      "dest": "/about.html"
    },
    {
      "src": "/privacy",
      "dest": "/privacy.html"
    },
    {
      "src": "/terms",
      "dest": "/terms.html"
    },
    {
      "src": "/contact",
      "dest": "/contact.html"
    },
    {
      "src": "/flying-vs-driving",
      "dest": "/posts/how-many-days-do-i-need.html"
    },
    {
      "src": "/road-trip-tips",
      "dest": "/posts/road-trip-tips.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1.html"
    },
    {
      "src": "/sitemap",
      "dest": "/sitemap.xml"
    },
    {
      "src": "/robots",
      "dest": "/robots.txt"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/blog",
      "dest": "/blog/index.html"
    },
    {
      "src": "/blog/(.*)",
      "dest": "/blog/$1"
    }
  ]
}
