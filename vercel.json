{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "blog/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "blog/_site"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "server.js"
    },
    {
      "src": "/tool/(.*)",
      "dest": "/blog/_site/tool/$1/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1.html"
    }
  ]
}
