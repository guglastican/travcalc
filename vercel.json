{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "blog/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_site/blog"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "server.js"
    },
    {
      "src": "/blog/(.*)",
      "dest": "/_site/blog/$1"
    },
    {
      "src": "/tool/(.*)", 
      "dest": "/_site/blog/tool/$1/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1.html"
    }
  ]
}
